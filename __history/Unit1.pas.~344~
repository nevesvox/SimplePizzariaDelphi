interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls,
  Vcl.ComCtrls, Vcl.ToolWin, Data.DB, Vcl.Grids, Vcl.DBGrids, Datasnap.DBClient,
  Vcl.ValEdit, Vcl.Buttons, Vcl.Imaging.pngimage, Vcl.Menus;

type
  TForm1 = class(TForm)
    Panel1: TPanel;
    Label1: TLabel;
    Shape1: TShape;
    Label2: TLabel;
    lblQtdTotal: TLabel;
    lblasas: TLabel;
    comBoxAtendente: TComboBox;
    GroupBox1: TGroupBox;
    Shape2: TShape;
    Label3: TLabel;
    lblData: TLabel;
    Button1: TButton;
    GroupBox2: TGroupBox;
    edtDescricao: TEdit;
    Label4: TLabel;
    edtValorProduto: TEdit;
    Label5: TLabel;
    edtQuantidadeProduto: TEdit;
    Label6: TLabel;
    BitBtn1: TBitBtn;
    memoVenda: TMemo;
    comBoxMesa: TComboBox;
    Label7: TLabel;
